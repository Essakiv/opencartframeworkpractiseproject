<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Multi Group Test Suite" verbose="2">
    
    <listeners>
        <listener class-name="Utilities.ExtentReportManager"/>
    </listeners>
    
    <!-- ============ SMOKE TESTS ============ -->
    <test name="Smoke Tests">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="Testcases.LoginTestCase"/>
            <class name="Testcases.LoginDataDrivenTest"/>
        </classes>
    </test>
    
    <!-- ============ SANITY TESTS ============ -->
    <test name="Sanity Tests">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="sanity"/>
            </run>
        </groups>
        <classes>
            <class name="Testcases.LoginTestCase"/>
        </classes>
    </test>
    
    <!-- ============ DATA DRIVEN TESTS ============ -->
    <test name="Data Driven Tests">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="datadriven"/>
            </run>
        </groups>
        <classes>
            <class name="Testcases.LoginDataDrivenTest"/>
        </classes>
    </test>
    
    <!-- ============ EXCLUDE GROUPS EXAMPLE ============ -->
    <test name="All Except DataDriven">
        <parameter name="browser" value="chrome"/>
        <groups>
            <run>
                <include name="smoke"/>
                <include name="regression"/>
                <exclude name="datadriven"/>
            </run>
        </groups>
        <classes>
            <class name="Testcases.LoginTestCase"/>
            <class name="Testcases.LoginDataDrivenTest"/>
        </classes>
    </test>
    
</suite>